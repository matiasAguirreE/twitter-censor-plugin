{
  "manifest_version": 3,
  "name": "Censurador de Tweets",
  "version": "1.0",
  "description": "Censurar tweets",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://withered-glitter-3f84.ignacio-alvbah.workers.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}